generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Expenses {
  id            Int      @id @default(autoincrement())
  date          DateTime @unique @db.Date
  travelling    Decimal  @default(0) @db.Decimal(10, 2)
  breakfast     Decimal  @default(0) @db.Decimal(10, 2)
  lunch         Decimal  @default(0) @db.Decimal(10, 2)
  dinner        Decimal  @default(0) @db.Decimal(10, 2)
  others        Decimal  @default(0) @db.Decimal(10, 2)
  loss          Decimal  @default(0) @db.Decimal(10, 2)
  gain          Decimal  @default(0) @db.Decimal(10, 2)
  expenses      Decimal  @default(0) @db.Decimal(10, 2) // sum of travelling, breakfast, lunch, dinner, others, loss
  totalExpenses Decimal  @default(0) @db.Decimal(10, 2) // gain - expenses
  // createdAt     DateTime @default(now())
  // updatedAt     DateTime @updatedAt
}

model reading {
  id               Int      @id @default(autoincrement())
  date             DateTime @unique(map: "unique_date") @db.Date
  sa1              Decimal? @db.Decimal
  sa2              Decimal? @db.Decimal
  sb1              Decimal? @db.Decimal
  sb2              Decimal? @db.Decimal
  ea1              Decimal? @db.Decimal
  ea2              Decimal? @db.Decimal
  eb1              Decimal? @db.Decimal
  eb2              Decimal? @db.Decimal
  five             Decimal? @db.Decimal
  two              Decimal? @db.Decimal
  one              Decimal? @db.Decimal
  fifthy           Decimal? @db.Decimal
  twenty           Decimal? @db.Decimal
  ten              Decimal? @db.Decimal
  pay              Decimal? @db.Decimal
  petrollts        Decimal? @db.Decimal
  diesellts        Decimal? @db.Decimal
  upi1             Decimal? @db.Decimal
  upi2             Decimal? @db.Decimal
  oil              Decimal? @db.Decimal
  other            Decimal? @db.Decimal
  extrapetrol      Decimal? @db.Decimal
  extradiesel      Decimal? @db.Decimal
  amount           Decimal? @db.Decimal
  food             Decimal? @db.Decimal
  change           Decimal? @db.Decimal
  cash             Decimal? @db.Decimal
  bills            Decimal? @default(0) @db.Decimal
  additionalAmount Decimal? @default(0) @db.Decimal
  isb1diesel       Boolean? @default(false)
  isb2diesel       Boolean? @default(false)
  isa2power        Boolean? @default(false)
}

